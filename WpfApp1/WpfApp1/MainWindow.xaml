<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="Dodaj" Content="Dodaj" HorizontalAlignment="Left" Margin="270,20,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.173,5.7" Click="Dodaj_Click"/>
        <Button x:Name="Usuń" Content="Ususń" HorizontalAlignment="Left" Margin="270,45,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <Button x:Name="Play" Content="|&gt;" HorizontalAlignment="Left" Margin="270,70,0,0" VerticalAlignment="Top" Width="75" Click="Play_Click"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="270,95,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.533,-0.5"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="270,120,0,0" VerticalAlignment="Top" Width="75"/>
        <ListBox x:Name="ListWPF" HorizontalAlignment="Left" Height="120" Margin="10,20,0,0" VerticalAlignment="Top" Width="255" SelectionChanged="ListWPF_SelectionChanged"/>

    </Grid>
</Window>
